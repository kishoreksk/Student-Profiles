<%= form_with(model: profile, class: "contents") do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5 text-xl font-medium ">
    <%= form.label :id , class: "text-white "%>
    <%= form.number_field :id, class: "block shadow text-gray-900 rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5 text-xl font-medium">
    <%= form.label :name, class: "text-white " %>
    <%= form.text_field :name, class: "block shadow text-gray-900 rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5 text-xl font-medium">
    <%= form.label :age, class: "text-white " %>
    <%= form.number_field :age, class: "block shadow text-gray-900 rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5 text-xl font-medium">
    <%= form.label :country, class: "text-white  " %>
    <%= form.text_field :country, class: "block shadow text-gray-900 rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
