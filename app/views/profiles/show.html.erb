<div class="mx-auto md:w-2/3 w-full mt-12   rounded-lg p-8 bg-gray-800 text-white space-y-4">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>


    <h1 class="font-bold text-4xl mb-8">Showing profile</h1>
    <div class="h-3 w-128 bg-blue-600"> </div>

    <%= render @profile %>

    <%= link_to 'Edit this profile', edit_profile_path(@profile), class: "mt-2 rounded-lg py-3 px-5 bg-blue-600 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this profile', profile_path(@profile), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-blue-600 font-medium" %>
    </div>
    <%= link_to 'Back to profiles', profiles_path, class: "ml-2 rounded-lg py-3 px-5 bg-blue-600 inline-block font-medium" %>
  </div>
</div>
